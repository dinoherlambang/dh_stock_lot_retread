<odoo>
    <record id="view_stock_production_lot_form_inherit_retread" model="ir.ui.view">
        <field name="name">stock.production.lot.form.inherit.retread</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <!-- Add retread field after ref field -->
            <xpath expr="//field[@name='ref']" position="after">
                <field name="retread"/>
            </xpath>
            <!-- Make product_id conditionally required based on retread field -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="attrs">{'required': [('retread', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_stock_production_lot_tree_inherit_retread" model="ir.ui.view">
        <field name="name">stock.production.lot.tree.inherit.retread</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="retread" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
